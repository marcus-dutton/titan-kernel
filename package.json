{
  "name": "@marcus-dutton/titan-kernel",
  "version": "1.1.3",
  "description": "Angular-inspired modular backend kernel for Node.js with full dependency injection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "example": "ts-node src/example.ts",
    "example:db": "ts-node src/example-database.ts",
    "example:no-db": "ts-node src/example-database.ts no-db",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "nodejs",
    "backend",
    "kernel",
    "dependency-injection",
    "angular",
    "typescript"
  ],
  "author": "Marcus Dutton <marcus.dutton@icloud.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcus-dutton/titan-kernel.git"
  },
  "bugs": {
    "url": "https://github.com/marcus-dutton/titan-kernel/issues"
  },
  "homepage": "https://github.com/marcus-dutton/titan-kernel#readme",
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.0",
    "chalk": "^4.1.2",
    "glob": "^11.0.0"
  },
  "peerDependencies": {
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/glob": "^8.1.0",
    "mongoose": "^8.12.1",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
